using System;
using System.Text;
using RabbitMQ.Client;
using RabbitMQ.Client.MessagePatterns;
using RabbitMQ.Client.Events;
using RabbitMQ.Util;

namespace testrabbitmq15
{
	class MainClass
	{
		public static void Main(string[] args)
		{
			while (true)
				Run(args);
		}
		
		public static void Run(string[] args)
		{
			string qName = "xyz01";
			string message = "Hello";
			ConnectionFactory cf = new ConnectionFactory ();
			
			using (IConnection cn = cf.CreateConnection ("localhost")) {
				using (IModel model = cn.CreateModel ()) {
					
					string finalName = model.QueueDeclare (qName, true);
					model.BasicPublish ("", finalName, null,
					                    Encoding.UTF8.GetBytes (message));
				}
			}

			using (IConnection cn = cf.CreateConnection ("localhost")) {
				using (IModel model = cn.CreateModel ()) {
					
					string finalName = model.QueueDeclare (qName, false);

					BasicGetResult result = model.BasicGet(finalName, true);
					string val = Encoding.UTF8.GetString (result.Body);
					Console.WriteLine(val);
				}
			}
		}
	}
}