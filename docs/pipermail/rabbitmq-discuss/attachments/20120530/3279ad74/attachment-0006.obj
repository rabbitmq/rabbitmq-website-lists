package com.csc.exceed.messageCenterLogging;

import org.springframework.transaction.annotation.Propagation;
import org.springframework.transaction.annotation.Transactional;

import com.csc.exceed.certificate.domain.BatchLog;

public class BatchLogHandler extends BaseMessageConsumer{
	
	
	/**
	 * This method will handle Schedule job log messages.
	 * @param resp
	 */
	public void handleMessage(BatchLog batchLog) throws Exception{
		System.out.println("****************======================================================");
		System.out.println("******************Batch ID=="+batchLog.getCertBchId());
		storeMessage(batchLog);
	}
	
	/**
	 * This method will store Messages into  CERT_BATCH_LOG table 
	 * @param response
	 */
	
	@Transactional(readOnly = false, propagation = Propagation.REQUIRED, rollbackFor = Exception.class)
	public void storeMessage(BatchLog batchLog) throws Exception{
			
		dao.saveOrUpdate(batchLog);
				
	}
	
	

}
